[
{{ $list := .Site.Pages  -}}
{{ $len := (len $list) -}}
    {{ range $index, $element := $list -}}
    {{ if $index }},{{ end }}
    {
        "id": {{ $index }},
        "href": "{{ .RelPermalink }}",
        "title": {{ .Title | jsonify }},
        "content": {{ .Plain | jsonify }}
    }
{{ end -}}
]